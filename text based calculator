while True:
    print("\n1.Add 2.Subtract 3.Multiply 4.Divide 5.Exit")
    ch = int(input("Choice: "))

    if ch == 5:
        break

    a = float(input("A: "))
    b = float(input("B: "))

    if ch == 1:
        print(a + b)
    elif ch == 2:
        print(a - b)
    elif ch == 3:
        print(a * b)
    elif ch == 4:
        print("Error" if b == 0 else a / b)
