students = {}

while True:
    print("\n1.Add Student  2.View Students  3.Exit")
    choice = int(input("Enter choice: "))

    if choice == 1:
        name = input("Student name: ")
        marks = int(input("Marks: "))
        students[name] = marks
    elif choice == 2:
        for name, marks in students.items():
            print(name, ":", marks)
    else:
        break
